<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5.0dp"
    android:paddingBottom="5.0dp" >
    
    <LinearLayout
        android:id="@+id/xjhistory_image_layout" 
        android:layout_width="50.0dp"
        android:layout_height="50.0dp"
        android:layout_marginLeft="5.0dp"
        android:layout_gravity="center_vertical"
        android:gravity="center">
        <ImageView
        android:id="@+id/xjhistory_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center" />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/xjhistory_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textAppearance="@style/CommonTextViewText"/>       
</LinearLayout>
