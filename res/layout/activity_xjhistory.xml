<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_topbar_high"
        android:background="@drawable/common_top_layer_without_projection_bg"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/xjhistory_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/common_icon_back_btn_selector" />

        <TextView
            android:id="@+id/xjhistory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/xjhistory_title"
            android:textAppearance="@style/CommonTopBarMiddleText" />
    </RelativeLayout>
    <ListView
        android:id="@+id/xjhistory_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:footerDividersEnabled="true"
        android:divider="@drawable/component_radar_viewmore_list_divider">
    </ListView>

</LinearLayout>